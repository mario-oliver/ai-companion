// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id      String @id @default(uuid())
  name    String
  companions Companion[]
}

model Companion {
  userId  String
  userName String
  src     String    
  description String
  // name -> @db.Text enables:
  //    1)  increase char length 
  //    2)  make it searchable 
  name    String @db.Text
  instructions    String @db.Text
  seed    String @db.Text

  // 1:1 relation
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  id      String @id @default(uuid())
  categoryId  String
  category    Category @relation(fields : [categoryId], references: [id])
  @@index([categoryId])

//makes the name field searchable
  @@fulltext([name])

  messages Message[] 
}

enum Role {
  user
  system
}

model Message {
  id      String @id @default(uuid())
  role    Role
  content String @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  companionId String
  userId      String

//cascade delete will cause that if the user deletes the companion all the corresponding messages from that companion will also be deleted
  companion   Companion @relation(fields: [companionId], references: [id], onDelete: Cascade)
  @@index([companionId])
}